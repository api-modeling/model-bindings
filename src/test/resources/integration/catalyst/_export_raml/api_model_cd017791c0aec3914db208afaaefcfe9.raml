#%RAML 1.0
uses:
  retail_locations_system_api_raml: data_model_f8e8261b8152e85576296b73b052e24e.raml
  retail_store_raml: data_model_9eb98fb811f6a3b46aaed9639e52fa0f.raml
title: retail_locations_system_api.raml
/productLocator:
  get:
    displayName: Custom
    queryParameters:
      zipcode?:
        description: Narrow down the search to include only stores in particular zipcode.
        type: string
    responses:
      "200":
        body:
          application/json: retail_locations_system_api_raml.ItemAvailabilityResponse
/reservation:
  post:
    displayName: Custom
    body: retail_locations_system_api_raml.Reservation
    responses:
      "201":
        body:
          application/json: retail_locations_system_api_raml.MessageResponse
/stores:
  post:
    displayName: Custom
    body: retail_store_raml.StoreInfo
    responses:
      "201":
        body:
          application/json: retail_store_raml.StoreInfo
  get:
    displayName: Custom
    queryParameters:
      zip?:
        description: |
          Zip code identifying area for store search. You must choose either zip, city or coordinates search, not all at once.
        type: string
    responses:
      "200":
        body:
          application/json: retail_locations_system_api_raml.StoreSearchResponse
/stores/{storeId}:
  get:
    displayName: Custom
    responses:
      "200":
        body:
          application/json: retail_store_raml.StoreInfo
  put:
    displayName: Custom
    body: retail_store_raml.StoreInfo
    responses:
      "200":
        body:
          application/json: retail_store_raml.StoreInfo
  uriParameters:
    storeId:
      type: string
